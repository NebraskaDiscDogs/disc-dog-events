= form_for form, url: users_path do |f|
	= render partial: "shared/form_errors", locals: { errors: form.errors}

	.form-row
		.form-field
			= f.label :full_name
			= f.text_field :full_name
	.form-row
		.form-field
			= f.label :email
			= f.text_field :email
	.form-row.--half
		.form-field
			= f.label :username
			= f.text_field :username
	.form-row.--half
		.form-field
			= f.label :password
			= f.password_field :password
		.form-field
			= f.label :password_confirmation
			= f.password_field :password_confirmation
	.field
		= f.submit "Create User"